#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Type check
echo "ğŸ“ Running TypeScript compiler..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript compilation failed"
  exit 1
fi

# Lint and fix
echo "ğŸ”§ Running ESLint..."
npm run lint:fix
if [ $? -ne 0 ]; then
  echo "âŒ ESLint checks failed"
  exit 1
fi

# Format code
echo "ğŸ¨ Running Prettier..."
npm run format
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting failed"
  exit 1
fi

# Run tests with coverage
echo "ğŸ§ª Running tests with coverage..."
npm run test:coverage
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed or coverage below threshold"
  exit 1
fi

# Security audit
echo "ğŸ”’ Running security audit..."
npm run audit
if [ $? -ne 0 ]; then
  echo "âŒ Security audit found issues"
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
